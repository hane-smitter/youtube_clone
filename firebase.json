{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/getPopularVideos",
        "function": "getPopularVideos"
      },
      {
        "source": "/api/getVideosByCategory",
        "function": "getVideosByCategory"
      },
      {
        "source": "/api/getVideoById",
        "function": "getVideoById"
      },
      {
        "source": "/api/getRelatedVideos",
        "function": "getRelatedVideos"
      },
      {
        "source": "/api/getVideosBySearch",
        "function": "getVideosBySearch"
      },
      {
        "source": "/api/getSubscribedChannels",
        "function": "getSubscribedChannels"
      },
      {
        "source": "/api/getPlaylistByChannelId",
        "function": "getPlaylistByChannelId"
      },
      {
        "source": "/api/getChannelDetails",
        "function": "getChannelDetails"
      },
      {
        "source": "/api/checkSubscriptionStatus",
        "function": "checkSubscriptionStatus"
      },
      {
        "source": "/api/getCommentOfVideoById",
        "function": "getCommentOfVideoById"
      },
      {
        "source": "/api/addComment",
        "function": "addComment"
      },
      {
        "source": "/api/getOneChannelDetails",
        "function": "getOneChannelDetails"
      },
      {
        "source": "/api/getOneVideoDetails",
        "function": "getOneVideoDetails"
      },
      {
        "source": "/api/getMyLikedVideos",
        "function": "getMyLikedVideos"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}